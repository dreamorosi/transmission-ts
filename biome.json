{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": [
			"coverage/*",
			"packages/*/coverage/*",
			"packages/infrastructure/cdk.out/*"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"semicolons": "always",
			"bracketSpacing": true,
			"quoteStyle": "single",
			"trailingCommas": "es5"
		}
	}
}
